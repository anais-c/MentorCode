<div class="page-title">
  <div class="title text-center">
    <h3>Create an account</h3>
  </div>
</div>
<div class="row">
  <div class="col-xs-4 col-xs-offset-4 col-md-4 col-md-offset-4 square">
    </br>
    <%= form_for(@user) do |f| %>

      <%= render 'shared/user_error_messages' %>

      <div class="form-group">
        <%= f.text_field :firstname, class: 'form-control', placeholder: "First name" %>
      </div><!-- end form-group -->

      <div class="form-group">
        <%= f.text_field :lastname, class: 'form-control', placeholder: "Last name" %>
      </div><!-- end form-group -->     
 
      <div class="form-group">
        <%= f.email_field :email, class: 'form-control', placeholder: "Email" %>
      </div><!-- end form-group -->

      <div class="form-group">
        <%= f.text_field :location, class: 'form-control', placeholder: "Location" %>
      </div><!-- end form-group -->     

      <div class="form-group">
        <%= f.password_field :password, class: 'form-control', placeholder: "Password" %>
      </div><!-- end form-group -->

      <div class="form-group">
        <%= f.password_field :password_confirmation, class: 'form-control', placeholder: "Password Confirmation" %>
      </div><!-- end form-group -->
      </br>
      <%= f.submit "Create my account", class: "btn btn-lg" %>
    <% end %>

  </div>
</div>

</br>
</br>