<div id="get-involved">
  <div class="container homepage">
    <h2>Get Involved</h2>
    <hr>
    <div class="row">
      <div class="col-md-4">
        <span class="fa-stack fa-4x">
          <i class="fa fa-circle fa-stack-2x"></i>
          <i class="fa fa-user fa-stack-1x fa-inverse"></i>
