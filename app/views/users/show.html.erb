<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h3 style="text-decoration: underline">Student Profile</h3>
    <div class="row">
      <aside class="col-md-4">
        <section class="user-info">
          <div class="user-gravatar">
            <%= gravatar_for @user %>
          </div>
          <h1>Name: <%= @user.firstname %> <%= @user.lastname %> </h1>
          </br>
          <p>Your email: <%= @user.email %></p>
        </section>
      </aside>
    </div>

    <% if @user.transactions.any? %>

      <p class="center lead"><%= link_to "See all experts", experts_path %></p>

      <div class="panel panel-default">

        <div class="panel-heading center">

          <table class="table table-striped">
          <h3 class="panel-title center"><strong>Your Upcomming Classes</strong></h3>
          <tr class="success">
      		  <th class= "center">Your mentor is:</th>
            <th class= "center">Date:</th>
      	    <th class= "center">Class begins at:</th>
      	    <th class= "center">Class ends at:</th>
          </tr>
        </div>

        <div class="panel-body">

          <% @transactions.each do |transaction| %>
            <tr> 
              <td>
                  <%= transaction.available_time.expert.firstname %>
                  <%= transaction.available_time.expert.lastname %>
              </td>
              <td><%= transaction.available_time.date.strftime("%m/%d/%Y") %> h</td>
              <td><%= transaction.available_time.start_time.strftime("%H:%M:%S") %> h</td>
              <td><%= transaction.available_time.end_time.strftime("%H:%M:%S") %> h</td>      
            </tr>          
          <% end %>

          </table>
          
        </div><!-- end panel-body -->

      </div><!-- panel-default -->

    <% else %>
      <p class="lead"><%= link_to "Choose an expert and make a reservation now", experts_path %></p>  
    <% end %>

  </div> 
</div>