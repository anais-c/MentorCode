<div class="row">
  <h2>Expert Dashboard</h2>
  <div class="col-md-4 pull-right center">
    <section class="picture center">
      <!--assets/images -->
      <%= image_tag("007.jpg", :size => '260x220') %>
    </section>  
  </div><!-- end col-md-4 -->

  <div class="col-md-8">
    <div class="show_name">
      <h3><%= @expert.firstname %> <%= @expert.lastname %></h3>  
    </div> 

    <div class="show_info">
      <h4><strong>Location:</strong> <%= @expert.location %></h4>      
      <h4><strong>Experience:</strong></h4>  
      <p><%= @expert.experience %></p>
    </div>      
  </div><!-- end col-md-8 --> 

</div><!-- end row -->

<div class="panel panel-default">

  <%= link_to "Add a new available_time", new_available_time_path %>
  <div class="panel-heading">
    <h3 class="panel-title">My Available Times</h3>
  </div>

  <div class="panel-body">
    <!-- Table -->
    <%= @expert.available_times.each do |available_time| %>
    <table class="table table-striped">
      <tr>
        <td><p>Date:</p><%= available_time.date %></td>
        <td><p>Start:</p><%= available_time.start_time %> h</td>
        <td><p>End:</p><%= available_time.end_time %> h</td>
      </tr>          
    </table>
    <% end %>
  </div><!-- end panel-body -->

</div><!-- panel-default -->


<div class="panel panel-default">

  <div class="panel-heading">
    <h3 class="panel-title">Transactios to confirm:</h3>
  </div>

  <div class="panel-body">
    <!-- Table -->
    <%= @user.transactions.each do |transaction| %>
    <table class="table table-striped">
      <tr>
        <td><p>Student name:</p><%= @user.firstname %> <%= @user.lastname %></td>
        <td><p>Start:</p><%= available_time.start_time %> h</td>
        <td><p>End:</p><%= available_time.end_time %> h</td>
        <td><%= link_to "Confirm", %></td>
      </tr>          
    </table>
    <% end %>
  </div><!-- end panel-body -->

</div><!-- panel-default -->