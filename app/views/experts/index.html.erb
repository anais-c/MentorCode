<div class="page-title">
  <div class="title text-center">
    <h3>All Our Mentors</h3>
  </div>
</div><!-- page-title -->

<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <div id="mentors">
      <% @experts.each do |expert| %>

          <div class="col-sm-4">
            <div class="panel text-center">
   
              <%= image_tag(expert.picture.url, size: "198x198") if expert.picture? %>
              <div class="info">
                <h4><%= link_to expert.firstname, expert_path(expert) %></h4>    
                <h6><strong>Location:</strong></h6>
                <p><%= expert.location %></p>
                </br>
                <h6><strong>Experience:</strong></h6>
                <p><%= expert.experience %></p>
                </br>
                <%= link_to "See disponibility", expert_path(expert), class: "btn" %>
              </div>   
    
            </div><!-- panel --> 
          </div> <!-- col-sm-4 -->
      <% end %>  
    </div>
  </div> <!-- end col-md-8 -->
</div><!-- end row -->